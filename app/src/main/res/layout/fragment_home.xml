<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".fragments.HomeFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/smooth_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <me.ibrahimsn.lib.SmoothBottomBar
        app:backgroundColor="@android:color/transparent"
        android:background="@drawable/background_bottom_bar"
        app:indicatorRadius="@dimen/_15sdp"
        app:indicatorColor="#00B238"
        app:iconTintActive="@color/white"
        app:textColor="@color/white"
        app:iconTint="#4D00B238"
        android:id="@+id/smooth_bottom_bar"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="?actionBarSize"
        app:menu="@menu/my_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>