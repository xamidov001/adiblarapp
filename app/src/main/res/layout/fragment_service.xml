<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E5E5E5"
    android:orientation="vertical"
    tools:context=".fragments.ServiceFragment">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:maxWidth="@dimen/_230sdp"
        android:text="Sozlamalar"
        android:layout_marginVertical="@dimen/_20sdp"
        android:textColor="#303236"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_share"
        android:layout_marginTop="@dimen/_15sdp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_share"
                android:padding="@dimen/_7sdp"
                android:id="@+id/share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:textColor="#303236"
                app:layout_constraintLeft_toRightOf="@id/share"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="Ulashish"
                android:gravity="center"
                android:textSize="@dimen/_18ssp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_about"
        android:layout_marginTop="@dimen/_15sdp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_about"
                android:padding="@dimen/_7sdp"
                android:id="@+id/about"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:textColor="#303236"
                app:layout_constraintLeft_toRightOf="@id/about"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="Dastur haqida"
                android:gravity="center"
                android:textSize="@dimen/_18ssp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_plus"
        android:layout_marginTop="@dimen/_15sdp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_plus"
                android:padding="@dimen/_7sdp"
                android:id="@+id/plus"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:textColor="#303236"
                app:layout_constraintLeft_toRightOf="@id/plus"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="Adib qo`shish"
                android:gravity="center"
                android:textSize="@dimen/_18ssp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>